{{#resume.basics}}
<section id="basics">
    <h1>{{name}}</h1>
    <div class="contact centered">
        {{#if email~}}
        <span class="vertical-separator">{{wrapMail email}}</span>
        {{~/if}}
        {{#if phone~}}
        <span class="vertical-separator">{{phone}}</span>
        {{~/if}}
        {{#if location~}}
        <span class="vertical-separator">{{location.city}}, {{location.countryCode}}</span>
        {{~/if}}
        {{#if github~}} 
        <span class="vertical-separator">Github: {{wrapURL github}}</span>
        {{~/if}}
        {{#if linkedin~}}
        <span class="vertical-separator">LinkedIn: {{wrapURL linkedin}}</span>
        {{~/if}}
        {{#if website~}}
        <span class="vertical-separator">Website: {{wrapURL website}}</span>
        {{~/if}}
    </div>
    {{#if summary}}
    <div class="summary">
        <h2>Summary</h2>
        <p>{{summary}}</p>
    </div>
    {{/if}}
</section>
{{/resume.basics}}
